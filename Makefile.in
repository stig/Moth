
# Build gMoth by default, but have an option to turn it off
ifeq ($(cfg__gmoth), 1)

mains		:= moth.c gmoth.c
libs		:= $(objroot)/ggtl/libggtl.a $(objroot)/yalla/libyalla.a -lglut -lm

else

mains		:= moth.c
ignore-files	:= gmoth.c
libs		:= $(objroot)/ggtl/libggtl.a $(objroot)/yalla/libyalla.a 

endif

include 	$(makefiles)/programs.mk
include 	$(makefiles)/install-programs.mk


